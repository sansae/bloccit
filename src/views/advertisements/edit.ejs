<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>

  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">
      <h1>Edit Advertisement</h1>

      <form action="/advertisements/<%= advertisement.id %>/edit" method="post">
        <div class="form-group">
          <label for="title">Title</label>
          <input value="<%= advertisement.title %>" type="text" placeholder="Enter Title" class="form-control" name="title" aria-describedby="titleHelp">
        </div>

        <div class="form-group">
          <label for="description">Description</label>
          <textarea rows="4" type="text" placeholder="Enter Description" class="form-control" name="description"><%= advertisement.description %></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Update</button>
      </form>

      <a href="/advertisements">
        <button>Return To All Ads</button>
      </a>
    </main>

    <% include ../static/partials/baseScripts.ejs %>
  </body>
</html>
