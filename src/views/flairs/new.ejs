<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>

  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">
      <h1>New Flair</h1>

      <form action="/flairs/create" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" aria-describedby="nameHelp" name="name" placeholder="Enter name" class="form-control">
        </div>

        <div class="form-group">
          <label for="color">Color</label>
          <input type="text" name="color" placeholder="Enter color" aria-describedby="colorHelp" class="form-control">
        </div>

        <button type="submit">Submit</button>
      </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>
  </body>
</html>
